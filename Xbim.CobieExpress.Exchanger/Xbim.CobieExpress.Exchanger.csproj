<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net47;netstandard2.0</TargetFrameworks>
    <AssemblyName>Xbim.CobieExpress.Exchanger</AssemblyName>
    <RootNamespace>Xbim.CobieExpress.Exchanger</RootNamespace>
	
	<Title>Xbim COBie Express Exchanger</Title>   
    <Version>5.0.0.0</Version>
    <AssemblyVersion>5.0.0.0</AssemblyVersion>
    <FileVersion>5.0.0.0</FileVersion>
    <Copyright>Xbim Ltd.</Copyright>
    <Description>.net library that provides support for conversion from IFC to COBie EXPRESS using xBIM Toolkit</Description>
    <Authors>Steve Lockley, Martin Cerny</Authors>
    <Company>Xbim Ltd.</Company>
    <PackageLicenseUrl>https://raw.githubusercontent.com/xBimTeam/XbimEssentials/master/LICENCE.md</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/xBimTeam/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/xBimTeam/XbimEssentials/tree/develop</RepositoryUrl>
    <PackageIconUrl>https://avatars1.githubusercontent.com/u/2284875?v=3&amp;amp;s=240</PackageIconUrl>
    <PackageTags>BIM, IFC, IfcXml, IfcZip, Ifc4,  COBie, .Net, C#, BuildingSmart</PackageTags>
    <PackageReleaseNotes>Separated from xBIM Exchange into separate project</PackageReleaseNotes>    
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>   
  </PropertyGroup>
  
  <ItemGroup>
    <None Remove="COBieAttributes.config" />
    <None Remove="FilterHelper\*.config" />
  </ItemGroup>
  
  <ItemGroup>
    <EmbeddedResource Include="FilterHelper\*.config" />
    <EmbeddedResource Include="COBieAttributes.config" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="2.1.0" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
    <PackageReference Include="System.Configuration.ConfigurationManager" Version="4.5.0" />
    <PackageReference Include="Xbim.Ifc4" Version="5.0.190" />
  </ItemGroup>
  
</Project>
